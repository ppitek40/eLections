@model IEnumerable<eLections.Models.ViewModels.UserViewModel>
@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Users</h2>

<table id="users" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Constituency
            </th>
            <th>
                Change Roles
            </th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@Html.ActionLink(user.UserName, "Details", "Administration", new { id = user.Id }, null)</td>
                <td>
                    @if (user.Constituency != null)
                    {
                        @Html.Raw(user.Constituency.Name);
                    }
                    else
                    {
                        @Html.Raw("Administrator");
                    }
                </td>
                <td>@Html.ActionLink("Change Roles", "ManageRoles", "Administration", new { id = user.Id }, new {@class = "btn btn-info btn-smaller" })</td>

            </tr>
        }
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function() {
            $("#users").DataTable();
        });
    </script>
}

